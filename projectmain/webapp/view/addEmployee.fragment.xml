<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Product">
    <f:SimpleForm>
        <f:content>
            <Label text="Employee Name"/>
            <Input value="{employeeObj>/name}"/>
            <Label text="Employee Designation"/>
            <Input value="{employeeObj>/designation}"/>
            <Label text="Department"/>
            <Input value="{employeeObj>/department}"/>
            <Label text="Email"/>
            <Input value="{employeeObj>/email}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveEmployee"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelEmployee"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>